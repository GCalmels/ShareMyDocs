<li>
	<a href="<%= filiere_semestre_bloc_matiere_path(@filiere, @semestre, @bloc, matiere) %>">
		<div class="admin-index-object-content display-inline-block">
			<%= matiere.nom %>
		</div>
	</a>
	<div class="display-inline-block float-right">
		<%= link_to edit_filiere_semestre_bloc_matiere_path(@filiere, @semestre, @bloc, matiere), title: "Edit #{matiere.nom}", rel: "nofollow", data: {method: "get"} do %>
			<div class="admin-icon">
				<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
			</div>
		<% end %>
		<%= link_to filiere_semestre_bloc_matiere_path(@filiere, @semestre, @bloc, matiere), title: "Delete #{matiere.nom}", rel: "nofollow", data: {confirm: "Si vous supprimez cette matière, tous les documents associés seront également supprimés.\nEtes vous sûre de vouloir supprimer la matiere #{matiere.nom} ?", method: "delete"} do %>
			<div class="admin-icon">
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
			</div>
		<% end %>
	</div>	
</li>