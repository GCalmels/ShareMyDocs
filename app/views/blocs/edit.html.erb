<% provide(:title, "Edit bloc") %>

<div class="container">
	<div class="admin-index-container">
		<h1>Update bloc <%= @bloc.nom %></h1>

		<div class="jumbotron admin-form">
			<%= form_for(@bloc, url: filiere_semestre_bloc_path, method: :patch) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= render 'fields', f: f %>
			
			<div>
				<%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>			
				<%= link_to "Annuler", filiere_semestre_blocs_path(@filiere, @semestre), class: "btn btn-lg btn-default float-right" %>
			</div>
			<% end %>
		</div>
	</div>
</div>