<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  	<% if (name == 'notice') %>
  		<% name = 'success' %>
  	<% elsif (name == 'alert') %>
  		<% name = 'danger' %>
	<% end %>
    <div class="alert alert-<%= name %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>