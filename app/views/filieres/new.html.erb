<% provide(:title, 'Créer Filiere') %>

<div class="container">
	<div class="admin-index-container">
		<h1>Créer nouvelle filiere</h1>
		
		<div class="jumbotron admin-form">
			<%= form_for(@filiere) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= render 'fields', f: f %>
			
			<div>
				<%= f.submit "Créer filiere", class: "btn btn-lg btn-primary" %>
				<%= link_to "Annuler", filieres_path, class: "btn btn-default btn-lg float-right" %>
			</div>
			<% end %>
		</div>		
	</div>
</div>